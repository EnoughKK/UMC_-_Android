<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/noti_cl">

    <TextView
        android:id="@+id/item_noti_tv_title"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:text="장학금 출력 기준 변경"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="@font/notosanskr_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@id/item_noti_iv_img"
        android:layout_marginEnd="30dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/item_noti_tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="00000000000000000000"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/notosanskr_regular"
        android:layout_marginTop="-5dp"
        app:layout_constraintTop_toBottomOf="@id/item_noti_tv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@id/item_noti_iv_img"
        android:layout_marginEnd="30dp"
        android:maxLines="3"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/item_noti_iv_img"
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="#dcdcdc"/>

    <View
        android:id="@+id/noti_item_v1"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/item_noti_iv_img"/>

    <View
        android:id="@+id/toolbar_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noti_item_v1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#BABABA"/>

</androidx.constraintlayout.widget.ConstraintLayout>