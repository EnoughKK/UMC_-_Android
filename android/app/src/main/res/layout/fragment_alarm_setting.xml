<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/alarm_setting_ll_title"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/alarm_setting_btn_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginStart="17dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/alarm_setting_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알림설정"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="18dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:id="@+id/alarm_setting_v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#252525"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/alarm_setting_ll_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/alarm_setting_ll_bookmark"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/alarm_setting_v1"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="즐겨찾기"
            android:textStyle="bold"
            android:fontFamily="@font/notosanskr_regular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <Switch
            android:id="@+id/alarm_setting_s_bookmark"
            android:layout_width="46dp"
            android:layout_height="22dp"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb"
            android:layout_gravity="right|center_vertical"/>

    </LinearLayout>

    <View
        android:id="@+id/alarm_setting_v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0"
        app:layout_constraintTop_toBottomOf="@id/alarm_setting_ll_bookmark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <LinearLayout
        android:id="@+id/alarm_setting_ll_new_write"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/alarm_setting_v2"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학교 및 지역의 새로운 글"
            android:textStyle="bold"
            android:fontFamily="@font/notosanskr_regular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <Switch
            android:id="@+id/alarm_setting_s_new_write"
            android:layout_width="46dp"
            android:layout_height="22dp"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb"
            android:layout_gravity="right|center_vertical"/>

    </LinearLayout>

    <View
        android:id="@+id/alarm_setting_v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0"
        app:layout_constraintTop_toBottomOf="@id/alarm_setting_ll_new_write"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <LinearLayout
        android:id="@+id/alarm_setting_ll_qna"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/alarm_setting_v3"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문의 답변"
            android:textStyle="bold"
            android:fontFamily="@font/notosanskr_regular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <Switch
            android:id="@+id/alarm_setting_s_qna"
            android:layout_width="46dp"
            android:layout_height="22dp"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb"
            android:layout_gravity="right|center_vertical"/>

    </LinearLayout>

    <View
        android:id="@+id/alarm_setting_v4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0"
        app:layout_constraintTop_toBottomOf="@id/alarm_setting_ll_qna"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <LinearLayout
        android:id="@+id/alarm_setting_ll_chat"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/alarm_setting_v4"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="댓글 알림 "
            android:textStyle="bold"
            android:fontFamily="@font/notosanskr_regular"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <Switch
            android:id="@+id/alarm_setting_s_chat"
            android:layout_width="46dp"
            android:layout_height="22dp"
            android:track="@drawable/switch_track_selector"
            android:thumb="@drawable/switch_thumb"
            android:layout_gravity="right|center_vertical"/>

    </LinearLayout>

    <View
        android:id="@+id/alarm_setting_v5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0"
        app:layout_constraintTop_toBottomOf="@id/alarm_setting_ll_chat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>