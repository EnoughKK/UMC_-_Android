<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/bookmarks_post_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="게시글"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:id="@+id/bookmarks_post_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookmarks_post_label">

        <!-- 인기글 프로필 -->
        <RelativeLayout
            android:id="@+id/bookmarks_post_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- 프로필 이미지 -->
            <ImageView
                android:id="@+id/bookmarks_post_profile_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:adjustViewBounds="true" />

            <!-- 닉네임 -->
            <TextView
                android:id="@+id/bookmarks_post_profile_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/bookmarks_post_profile_img"/>

            <!-- 작성일 -->
            <TextView
                android:id="@+id/bookmarks_post_profile_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="10dp"
                android:textColor="#000000"
                android:layout_below="@+id/bookmarks_post_profile_nickname"
                android:layout_toRightOf="@+id/bookmarks_post_profile_img"/>

        </RelativeLayout>

        <!-- 인기글 내용 -->
        <RelativeLayout
            android:id="@+id/bookmarks_post_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookmarks_post_profile"
            android:layout_marginTop="10dp">

            <!-- 제목 -->
            <TextView
                android:id="@+id/bookmarks_post_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <!-- 내용 -->
            <TextView
                android:id="@+id/bookmarks_post_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bookmarks_post_content_title"
                android:layout_marginTop="5dp"
                android:layout_marginRight="100dp"
                android:textColor="#000000"
                android:textSize="12dp" />

        </RelativeLayout>

        <!-- 이미지 -->
        <ImageView
            android:id="@+id/bookmarks_post_content_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true" />

        <!-- 인기글 아이콘 -->
        <RelativeLayout
            android:id="@+id/bookmarks_post_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/bookmarks_post_content">

            <!-- 댓글수 -->
            <RelativeLayout
                android:id="@+id/bookmarks_post_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp">

                <ImageView
                    android:id="@+id/bookmarks_post_comments_icon"
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:layout_margin="3dp"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_comments_count"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/bookmarks_post_comments_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@+id/bookmarks_post_comments_icon"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <!-- 조회수 -->
            <RelativeLayout
                android:id="@+id/bookmarks_post_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bookmarks_post_comments"
                android:layout_marginRight="2dp">

                <ImageView
                    android:id="@+id/bookmarks_post_view_icon"
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_view_count" />

                <TextView
                    android:id="@+id/bookmarks_post_view_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@+id/bookmarks_post_view_icon"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <!-- 좋아요 수 -->
            <RelativeLayout
                android:id="@+id/bookmarks_post_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bookmarks_post_view"
                android:layout_marginRight="2dp">

                <ImageView
                    android:id="@+id/bookmarks_post_good_icon"
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:layout_margin="3dp"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_good_count"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/bookmarks_post_good_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@+id/bookmarks_post_good_icon"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>