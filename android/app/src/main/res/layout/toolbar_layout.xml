<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:contentInsetStart="0dp"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <RelativeLayout
        android:id="@+id/toolbar_button"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="19dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_badjang"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>

        <ImageButton
            android:id="@+id/toolbar_search_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_header_search"
            android:layout_toLeftOf="@id/toolbar_star_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>

        <ImageButton
            android:id="@+id/toolbar_star_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_header_star"
            android:layout_toLeftOf="@id/toolbar_bell_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>

        <ImageButton
            android:id="@+id/toolbar_bell_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="22dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_header_bell"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>