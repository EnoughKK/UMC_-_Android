<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <LinearLayout
        android:id="@+id/toolbar_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:gravity="right">

        <ImageButton
            android:id="@+id/toolbar_search_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_header_search" />

        <ImageButton
            android:id="@+id/toolbar_star_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_header_star" />

        <ImageButton
            android:id="@+id/toolbar_bell_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_header_bell" />

    </LinearLayout>

</androidx.appcompat.widget.Toolbar>