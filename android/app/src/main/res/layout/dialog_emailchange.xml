<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="139dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/upround_box"
            android:gravity="center"
            android:text="이메일 변경"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/Emailchange_Email"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@drawable/round_box6"
            android:hint="변경할 이메일을 입력해주세요"
            android:fontFamily="@font/notosanskr_regular"
            android:textSize="12sp"
            android:paddingStart="10dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/Emailchange_missemail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="이메일 형식에 맞게 입력해주세요"
            android:fontFamily="@font/notosanskr_regular"
            android:textColor="#ED1C24"
            android:textSize="12sp"
            android:layout_marginStart="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Emailchange_cancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/downround_left"
            android:backgroundTint="#F0F4FF"
            android:gravity="center"
            android:text="취소"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="#000000"
            android:textSize="14sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Emailchange_ok"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/downround_right"
            android:backgroundTint="#2173FD"
            android:gravity="center"
            android:text="확인"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>