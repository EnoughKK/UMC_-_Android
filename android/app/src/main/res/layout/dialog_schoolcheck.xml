<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.SchoolCheckActivity">

  <View
      android:layout_width="match_parent"
      android:layout_height="24dp"
      android:background="#D9D9D9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <LinearLayout
      android:id="@+id/School_Dialog"
      android:layout_width="320dp"
      android:layout_height="414dp"
      android:orientation="vertical"
      android:background="@drawable/round_box2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="156dp"
      android:layout_marginStart="40dp"
      >

    <LinearLayout
        android:id="@+id/School_linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="-30dp"
        android:layout_marginTop="35dp">

      <TextView
          android:id="@+id/School_Name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="학교"
          android:fontFamily="@font/notosanskr_bold"
          android:textColor="@color/black"
          android:textSize="15sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="15dp" />
      <EditText
          android:id="@+id/School_Search"
          android:layout_width="214dp"
          android:layout_height="30dp"
          android:background="@drawable/round_box3"
          android:hint="검색하기"
          android:fontFamily="@font/notosanskr_regular"
          android:textSize="10sp"
          android:paddingStart="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="46dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/School_linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/School_College"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="단과대학"
          android:fontFamily="@font/notosanskr_bold"
          android:textColor="@color/black"
          android:textSize="15sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="15dp"/>
      <Spinner
          android:id="@+id/School_College_spinner"
          android:layout_width="214dp"
          android:layout_height="28dp"
          android:background="@drawable/round_box3"
          android:fontFamily="@font/notosanskr_regular"
          android:textSize="10sp"
          android:paddingStart="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="20dp"
          android:layout_marginTop="10dp"
          android:spinnerMode="dropdown"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/School_linearlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/School_Major"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="학과"
          android:fontFamily="@font/notosanskr_bold"
          android:textColor="@color/black"
          android:textSize="15sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="15dp"/>
      <Spinner
          android:id="@+id/School_Major_spinner"
          android:layout_width="214dp"
          android:layout_height="28dp"
          android:background="@drawable/round_box3"
          android:fontFamily="@font/notosanskr_regular"
          android:textSize="10sp"
          android:paddingStart="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="46dp"
          android:layout_marginTop="10dp"
          android:spinnerMode="dropdown"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/School_linearlayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/School_Grade"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="학년"
          android:fontFamily="@font/notosanskr_bold"
          android:textColor="@color/black"
          android:textSize="15sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="15dp"/>
      <Spinner
          android:id="@+id/School_Grade_spinner"
          android:layout_width="214dp"
          android:layout_height="28dp"
          android:background="@drawable/round_box3"
          android:fontFamily="@font/notosanskr_regular"
          android:textSize="10sp"
          android:paddingStart="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="46dp"
          android:layout_marginTop="10dp"
          android:spinnerMode="dropdown"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/School_linearlayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <TextView
          android:id="@+id/School_Semester"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="학기"
          android:fontFamily="@font/notosanskr_bold"
          android:textColor="@color/black"
          android:textSize="15sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="15dp"/>
      <Spinner
          android:id="@+id/School_Semester_spinner"
          android:layout_width="214dp"
          android:layout_height="28dp"
          android:background="@drawable/round_box3"
          android:fontFamily="@font/notosanskr_regular"
          android:textSize="10sp"
          android:paddingStart="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="46dp"
          android:layout_marginTop="10dp"
          android:spinnerMode="dropdown"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="290dp"
          android:layout_height="1dp"
          android:background="@color/black"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="15dp"
          android:layout_marginTop="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/School_Localname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역명(도, 시/군/구)"
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"/>

    <LinearLayout
        android:id="@+id/School_linearlayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="15dp"
          android:text="도"
          android:textColor="@color/black"
          android:fontFamily="@font/notosanskr_bold"
          android:textSize="15sp"/>

      <Spinner
          android:id="@+id/School_Localname1_spinner"
          android:layout_width="90dp"
          android:layout_height="28dp"
          android:background="@drawable/round_box3"
          android:fontFamily="@font/notosanskr_regular"
          android:textSize="10sp"
          android:paddingStart="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="10dp"
          android:layout_marginTop="10dp"
          android:spinnerMode="dropdown"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="시/군/구"
          android:fontFamily="@font/notosanskr_bold"
          android:textColor="@color/black"
          android:textSize="15sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="15dp"/>

      <Spinner
          android:id="@+id/School_Localname2_spinner"
          android:layout_width="90dp"
          android:layout_height="28dp"
          android:background="@drawable/round_box3"
          android:fontFamily="@font/notosanskr_regular"
          android:textSize="10sp"
          android:paddingStart="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="10dp"
          android:layout_marginTop="10dp"
          android:spinnerMode="dropdown"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/School_linearlayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:orientation="horizontal">

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/School_SkipBtn"
          android:layout_width="137dp"
          android:layout_height="34dp"
          android:background="@drawable/round_box"
          android:backgroundTint="#D9D9D9"
          android:text="건너뛰기"
          android:fontFamily="@font/notosanskr_medium"
          android:textColor="@color/black"
          android:gravity="center"
          android:textSize="13sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="10dp"
          android:layout_marginTop="15dp" />

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/School_ApplyBtn"
          android:layout_width="137dp"
          android:layout_height="34dp"
          android:background="@drawable/round_box"
          android:backgroundTint="#2173FD"
          android:text="적용하기"
          android:fontFamily="@font/notosanskr_medium"
          android:textColor="@color/white"
          android:gravity="center"
          android:textSize="13sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="15dp"
          android:layout_marginTop="15dp" />
    </LinearLayout>
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#D9D9D9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="752dp" />

  </androidx.constraintlayout.widget.ConstraintLayout>