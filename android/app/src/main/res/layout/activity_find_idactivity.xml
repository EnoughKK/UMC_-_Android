<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage.Login.FindIDActivity">

  <View
      android:layout_width="match_parent"
      android:layout_height="24dp"
      android:background="#D9D9D9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <LinearLayout
      android:id="@+id/FindID_linearLayout1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="24dp">

    <ImageView
        android:id="@+id/FindID_UpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"/>

    <TextView
        android:id="@+id/FindID_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="19dp"
        android:layout_marginTop="5dp"/>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/FindID_linearLayout2"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:orientation="horizontal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="240dp">

    <EditText
        android:id="@+id/FindID_Phone"
        android:layout_width="206dp"
        android:layout_height="56dp"
        android:hint="전화번호"
        android:fontFamily="@font/notosanskr_regular"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/FindID_receiveBtn"
        android:layout_width="99dp"
        android:layout_height="44dp"
        android:background="@drawable/round_box4"
        android:backgroundTint="#7FB3FD"
        android:text="인증번호 받기"
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-5dp"/>
  </LinearLayout>

  <TextView
      android:id="@+id/FindID_missPhone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="전화번호 형식에 맞게 입력해주세요"
      android:fontFamily="@font/notosanskr_regular"
      android:textColor="#ED1C24"
      android:textSize="12sp"
      android:paddingStart="5dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="288dp"/>

  <LinearLayout
      android:id="@+id/FindID_linearLayout3"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:orientation="horizontal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="320dp"
      >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <EditText
          android:id="@+id/FindID_Authnum"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:hint="인증번호"
          android:fontFamily="@font/notosanskr_regular"
          android:textSize="15sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/FindID_Time"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="04:59"
          android:fontFamily="@font/notosanskr_regular"
          android:textColor="#ED1C24"
          android:textSize="12sp"
          android:gravity="center"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginLeft="320dp" />
    </FrameLayout>
  </LinearLayout>

  <TextView
      android:id="@+id/FindID_missAuthnum"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="인증번호가 일치하지 않습니다"
      android:fontFamily="@font/notosanskr_regular"
      android:textColor="#ED1C24"
      android:textSize="12sp"
      android:paddingStart="5dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="365dp"/>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/FindID_AuthBtn"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:background="@drawable/round_box"
      android:backgroundTint="#2173FD"
      android:text="인증하기"
      android:fontFamily="@font/notosanskr_medium"
      android:textColor="@color/white"
      android:textSize="15sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="410dp"/>

  <TextView
      android:id="@+id/FindID_PWPage"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="비밀번호를 잃어버리셨나요?"
      android:fontFamily="@font/notosanskr_regular"
      android:textColor="#6C6C6C"
      android:textSize="10sp"
      android:clickable="true"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:gravity="center"
      android:layout_marginTop="448dp"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#D9D9D9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="752dp" />

  </androidx.constraintlayout.widget.ConstraintLayout>