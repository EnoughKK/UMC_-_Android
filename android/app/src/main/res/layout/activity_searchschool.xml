<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.SearchSchoolActivity">

  <View
      android:layout_width="match_parent"
      android:layout_height="24dp"
      android:background="#D9D9D9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <LinearLayout
      android:id="@+id/Search_linearlayout1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="24dp">

    <ImageView
        android:id="@+id/Search_UpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        />

    <TextView
        android:id="@+id/Search_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학교 설정하기"
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="19dp"
        android:layout_marginTop="5dp"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/Search_linearlayout2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <EditText
          android:id="@+id/Search_school_box"
          android:layout_width="320dp"
          android:layout_height="wrap_content"
          android:hint="학교를 검색해주세요"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="40dp"
          android:layout_marginTop="114dp" />
      <ImageButton
          android:id="@+id/Search_Btn"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:src="@drawable/group572"
          android:backgroundTint="@color/white"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginStart="330dp"
          android:layout_marginTop="120dp" />
    </FrameLayout>

      <ListView
          android:id="@+id/Search_School_listview"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
  </LinearLayout>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/Search_settingBtn"
      android:layout_width="320dp"
      android:layout_height="40dp"
      android:background="@drawable/round_box"
      android:backgroundTint="#DBDBDB"
      android:text="설정하기"
      android:fontFamily="@font/notosanskr_medium"
      android:textColor="@color/black"
      android:gravity="center"
      android:textSize="15sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginStart="40dp"
      android:layout_marginTop="697dp"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#D9D9D9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="752dp" />

  </androidx.constraintlayout.widget.ConstraintLayout>